<div class="container-fluid">
    <h3>Turn #{{turn}}, player {{activePlayer}}</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name<sup class="sub-th"> (throws left)</sup></th>
                <th>Target<sup class="sub-th"> (darts left to close)</sup></th>
                <th>Finishing turn</th>
            </tr>
        </thead>

        <tbody>
            {{#each players as |player playerId|}}
            <tr {{#if player.active}} class="info" {{/if}}>
                <td class="player-name">
                    {{player.name}}
                    {{#if player.active}}
                        <span class="badge">{{player.throwsLeft}}</span>
                    {{/if}}
                </td>
                <td class="player-score">
                    {{player.currentTarget}}
                    <span class="badge">{{player.remainingDartsforTarget}}</span>
                </td>
                <td>
                    {{#if player.won}}
                        <span class="label label-success">{{player.winningTurn}}</span>
                    {{else}}
                        &nbsp;
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
